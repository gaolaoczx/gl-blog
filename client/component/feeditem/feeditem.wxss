/* component/feeditem/feeditem.wxss */

.scroll-view-item
{
  /* height: 100%; */
  display: flex;
  flex-direction: row;
  padding: 5px;
  padding-top: 5px;
  padding-bottom: 8px;
  border-bottom: 1px solid #eee;
  margin-top: 1px; /* 当 scroll-view 组件的第一个直接子元素设置了 margin-top 时即使 scroll-view 只有一行也可以滚动 */
}

.avatar-img
{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.text
{
  margin-left: 5px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.userinfo
{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.username
{
  /* color: #09bb07; */
  font-size: 15px;
  /* font-weight: 100px; */
  /* padding-left: 5px; */
}

.uidspan,.pubtime
{
  font-size: 11px;
  color: rgb(214, 211, 211);
}

.content
{
  margin-top: 5px;
  margin-bottom: 5px;
}

.actionbar
{
  display: flex;
  align-items: center;
  font-size: 11px;
  color: rgb(214, 211, 211);
}

.action-icon
{
  width: 15px;
  height: 15px;
  margin-right: 3px;
}
