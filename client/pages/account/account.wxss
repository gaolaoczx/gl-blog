/* pages/account/account.wxss */
.accout-box
{
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.user-box
{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.user-box-avartar
{
  max-width: 600rpx;
  max-height: 600rpx;

  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 15rpx;
  border: 3rpx solid #09bb07;
}

.user-box-name
{
  color: #09bb07;
}

.accout-menu
{
  display: flex;
  flex-direction: column;
}

.accout-menu-item
{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #999;
  border-top: 3rpx solid #eee;
}

.accout-menu-item:last-child
{
  border-bottom: 3rpx solid #eee;
}

.accout-menu-item-text
{
  margin-left: 15rpx;
}

.accout-menu-item-icon
{
  max-width: 60rpx;
  max-height: 60rpx;
  margin-right: 15rpx;
}